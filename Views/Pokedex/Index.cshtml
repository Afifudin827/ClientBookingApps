
@{
    Layout = "_LayoutPokedex";
    ViewData["Title"] = "Pokemon Database";
}

<div style="width: 100%;text-align: center;">
        <img style="width: 250px; height: 100px;" src="https://user-images.githubusercontent.com/29473781/180619084-a56960ab-7efa-4e34-9d33-4e3e581d62ff.png">
    </div>

<div class = "contain" style="display: inline-flex; margin: 10px;">
    
</div>



<!-- Button trigger modal -->


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-center">
                            <img src="" alt="Foto" class="img-thumbnail" id="imgThumb">
                        </div>
                        <h5 class="card-title text-center NamePoke">Nama</h5>
                        <p class="card-text text-center text-muted IDPoke">ID</p>
                        <div class="d-flex justify-content">
                            <p class="card-text">Base Stat :</p>
                        </div>
                        <div class="d-flex justify-content-center">
                            <table class="table">
                                <thead>
                                  <tr>
                                    <th scope="col">HP</th>
                                    <th scope="col">Attack</th>
                                    <th scope="col">Defense</th>
                                    <th scope="col">SPL Attack</th>
                                    <th scope="col">SPL Defense</th>
                                    <th scope="col">Speed</th>
                                  </tr>
                                </thead>
                                <tbody class="base_stats">
                                  
                                </tbody>
                              </table>
                        </div>
                        <div class="d-flex ">
                            <p>Best Movement :</p>
                            <ul class="bestMovePoke">
                                
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>




@section Scripts{
    <script src="~/js/pokedex.js" asp-append-version="true"></script>
}


